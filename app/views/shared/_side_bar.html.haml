.chat-side
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      .side-header__box__menu
        .side-header__box__menu__new-group
          =link_to "groups/new", class: "side-header__box__menu__new-group side-header__box__menu__new-group--left" do
            = fa_icon 'edit' 
        .side-header__box__menu__edit-user
          =link_to "users/id/edit", class: "side-header__box__menu__new-group side-header__box__menu__new-group--right" do
            =fa_icon 'cog'
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message